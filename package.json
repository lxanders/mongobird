{
    "name": "mongobird",
    "version": "0.0.0-dev",
    "description": "Bluebird aware mongoDB driver.",
    "main": "lib/mongobird.js",
    "scripts": {
        "lint": "eslint .",
        "unit-test": "istanbul test _mocha test/ -- -R spec --recursive",
        "check-coverage": "istanbul check-coverage --statement 100 --branch 100 --function 100 --lines 100",
        "report-coverage-html": "istanbul report html",
        "coveralls": "cat ./build/coverage/lcov.info | coveralls",
        "test": "npm run lint && npm run unit-test --coverage && npm run check-coverage"
    },
    "dependencies": {
        "mongodb": "^1.4.19",
        "bluebird": "^2.3.6",
        "beltjs": "0.1.3",
        "muri": "1.0.0",
        "underscore": "1.7.0"
    },
    "devDependencies": {
        "mocha": "2.0.1",
        "sinon": "1.10.3",
        "chai": "1.9.2",
        "eslint": "0.9.1",
        "eslint-plugin-mocha": "0.2.2",
        "istanbul": "0.3.2",
        "coveralls": "2.11.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/lxanders/mongobird.git"
    },
    "keywords": [
        "mongodb",
        "promise",
        "promises",
        "bluebird"
    ],
    "author": "Alexander Schmidt <alexanderschmidt1@gmail.com>",
    "contributors": [
        "Mathias Schreck <schreck.mathias@gmail.com>"
    ],
    "license": "MIT"
}
